/*------------------------------------*\
    $ELEMENTS
\*------------------------------------*/

body {
    background: #F6F6F6;
    font: 22px Georgia, Cambria, 'Times New Roman', Times, serif;
    line-height: 1.5;
    color: #2C2F35;
}
a {
    text-decoration: none;
}
h1, h2, h3, h4, h5, h6, .block {
    font-family: 'Europa', 'Helvetica Neue', 'Helvetica', Geneva, Verdana, sans-serif;
    font-weight: 400;
    color: #111;
    letter-spacing: 5px;
    text-rendering: optimizeLegibility;
    text-transform: uppercase;
}
h3 { 
    font-size: 36px; 
    margin-bottom: 20px; 
}
p {
    margin: 0 0 28px 0;
    font-size: 18px;
}
strong {
    font-weight: bold;
}
sup {
    font-size: .7em;
    vertical-align: top;
    line-height: 1.15em;
}
input {
    background: #F6F6F6;
    padding: 7px 13px 6px;
    margin: 0px 5px;
    font-size: 17px;
    border: 1px solid #F3F3F3;
    border-radius: 4px;
}
.block {
    display: block;
    border: 1px solid #111;
    padding: 10px;
    text-align: center;
}
.block:hover {
    background: #111;
    color: #F6F6F6; 
}





/*------------------------------------*\
    $LAYOUT
\*------------------------------------*/


.wrapper {
    width: 100%;
    max-width: 1440px;
    margin: 0px auto;
}

header,
.header-background {
    position: relative;
    width: 100%;
    height: 650px;
}

.timeline,
.projects,
.intro,
.contact {
    position: relative;
    width: 100%;
    min-height: 250px;
    margin: 100px 0px 20px;
}

.text-block {
    margin: 0px auto;
    width: 640px;
    padding: 0px 20px;
}

.drop-shadow {
    box-shadow: 0px 1px 3px rgba(0,0,0,.365);
}

.typekit-badge { display: none !important; }


/*------------------------------------*\
    $HEADER
\*------------------------------------*/

header {
    position: relative;
}

.header-background {
    background-repeat: no-repeat;
    background-position: center center;
}

.header-background1 { background: url('../images/background1.jpg'); background-size: 100% auto; }
.header-background2 { background: url('../images/background2.jpg'); background-size: 100% auto; }
.header-background3 { background: url('../images/background3.jpg'); background-size: 100% auto; }
.header-background4 { background: url('../images/background4.jpg'); background-size: 100% auto; }

.header-background:after {
    content: '';
    width: 100%;
    height: 50%;
    position: absolute;
    bottom: 0px;
    z-index: 2;
    gradient(rgba(0,0,0,0), rgba(0,0,0,.7));
}

.header-title {
    position: absolute;
    bottom: 175px;
    font-size: 70px;
    width: 600px;
    left: 50%;
    margin-left: -300px;
    font-weight: 200;
    z-index: 3;
    color: #F6F6F6;
    text-align: left;
    text-transform: uppercase;
    text-shadow: 1px 0px 1px rgba(0, 0, 0, .1);
}
.header-logo {
    background: url('../images/Logo_white@2x.png');
    background-size: 100% 100%;
    position: absolute;
    top: 100px;
    z-index: 3;
    left: 50%;
    margin-left: -75px;
    width: 150px;
    height: 150px;
    opacity: .95;
}
.header-learn-more {
    width: 200px;
    position: absolute;
    border: 2px solid #FFF;
    padding: 10px 20px;
    text-align: center;
    bottom: 100px;
    left: 50%;
    margin-left: -100px;
    color: #FFF;
    z-index: 5;
}


/*------------------------------------*\
    $INTRO
\*------------------------------------*/

.intro-wrapper { 
    padding: 100px 0px 20px; 
}



/*------------------------------------*\
    $TIMELINE
\*------------------------------------*/

.timeline {
    position: relative;
}
.life-wrapper {
    position: relative;
    background: #2C2F35;
    color: #F6F6F6;
    overflow-y: scroll;
    font-family: Helvetica, Arial, sans-serif;
    font-size: 13px;
}
#life {
    padding-top: 40px;
    padding-bottom: 5em;
    
}
#life section.year{
    border-left: 1px dashed rgba(255,255,255,.1);
    color: rgba(255,255,255,.3);
    position: absolute;
    top: 0;
    bottom: 0;
    padding-left: 10px;
    padding-top: 10px;
    pointer-events: none;
    font-weight: 300;
    white-space: nowrap;
}
#life .event{
    padding-right: 20px;
    padding-bottom: 5px;
    vertical-align: middle;
    white-space: nowrap;
}
#life .event b {
    font-weight: normal;
    color: rgba(255,255,255,.5);
}
#life .event .time {
    display: inline-block;
    overflow: hidden;
    height: 0;
    border: 4px solid #FFF;
    border-radius: 4px;
    margin-right: 10px;
    opacity: .3;
    position: relative;
    left: -2px;
}
#life .event:hover .time {
    opacity: .5;
}


/*------------------------------------*\
    $PROJECTS
\*------------------------------------*/

.projects {}
.projects-project {
    font-size: 0px;
    background: #FFF;
}

.project-code, 
.project-preview,
.project-comment {
    position: relative;
    display: inline-block;
    font-size: 22px;
    vertical-align: top;
    height: 275px;
    overflow: hidden;
}

.project-code {
    background: #2C2F35;
    font-family: "source-code-pro";
    color: #F3F3F3;
    font-size: 16px;
}
.project-preview {
    overflow: hidden;
}
.project-comment {
    background: #FFF;
    padding: 20px;
}
.project-comment h4 {
    font-size: 28px;
    margin-bottom: 20px;
}
.project-comment h4 a {
    color: #111;
}
.project-comment h4 a:hover {
    text-decoration: underline;
}



/*------------------------------------*\
    $CONTACT
\*------------------------------------*/

.contact {
    font-size: 0px;
}
.contact .block {
    font-size: 28px;
    display: inline-block;
}
.no-border { border: 0px; }
.no-border:hover { background: none }




/*------------------------------------*\
    $FOOTER
\*------------------------------------*/

footer {
    background: #2C2F35;
    color: rgba(255,255,255,.5);
    font-family: "source-code-pro";
    font-size: 13px;
}
.footer-wrapper {
    padding: 15px;
}
.footer-wrapper div { display: inline-block; }
.footer-left { text-align: left; }
.footer-right { text-align: right; }



