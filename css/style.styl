    $RESPONSIVE
\*------------------------------------*/
@media only screen and (min-width: 1600px) {
    .header-logo {
        top: 200px;
    }
}
@media only screen and (max-width: 1280px) {
    .project-code, 
    .project-preview,
    .project-comment {
        height: 350px;
    }
}
@media only screen and (max-width: 1024px),
only screen and (max-device-width: 1024px) {
    .project-code, 
    .project-preview,
    .project-comment {
        height: 375px;
    }
}
@media only screen and (max-width: 975px),
only screen and (max-device-width: 975px) {
    .header-logo {
        width: 100px;
        height: 100px;
        margin-left: -50px;
        top: 100px;
    }
    
    .project {
        background: #EEE;
        margin-bottom: 20px;
    }
    .project-code, 
    .project-preview,
    .project-comment {
        height: auto;
    } 
    .project-comment { 
        width: 100%;
    }
    .project-code,
    .project-preview {
        width: 50%;
        height: 200px;
    }
}
@media only screen and (max-width: 750px),
only screen and (max-device-width: 750px) {
    .text-block { width: 480px; }
    .block { font-size: 20px !important }
    .header-title {
        width: 480px;
        margin-left: -240px;
        bottom: 30px;
    }
    .header-learn-more {
        bottom: 50px;
    }
    .header-logo {
        top: 50px;
    }
}
@media only screen and (max-width: 500px),
only screen and (max-device-width: 500px) {

    header,
    .header-background {
        height: 100%;
    }
    .header-background {
        background-size: auto 100%;
    }
    .header-title {
        width: 320px;
        margin-left: -160px;
        bottom: 30px;
        line-height: 1.15;
    }
    .header-logo {
        top: 75px;
    }
    .header-learn-more {
        bottom: 100px;
    }
    
    .project h4 { font-size: 27px; }

    .text-block { 
        font-size: 20px;
        width: 320px; 
    }
    .block { font-size: 18px !important; }
    
    .intro-wrapper { padding-top: 0px; }

    .footer-wrapper div { width: 100% !important; text-align: center; }
}
